<div class="container">
  <div class="jumbotron">
    <h1 class="text-center"><span class="fa fa-fire"></span> Burger Time!</h1>
    <hr>
    <h2 class="text-center">Click on the buttons to eat a burger or add your own!</h2>
    <br>
  </div>

  {{!-- <h1>Burger Time!</h1> --}}
  <div class="row">
    <div class="col">
      <h4>Eat Da Burger!</h4>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4>Devoured!</h4>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h4>Add a Burger</h4>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="slee">Devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Not yet!
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>